{
  "name": "@devscast/datazend",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/bun": "latest",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "mssql": "^12.2.0",
    "mysql2": "^3.17.2",
    "tsup": "^8.5.1",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "mssql": "^12.2.0",
    "mysql2": "^3.17.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "tsup --minify",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "============= HUSKY =============": "",
    "prepare": "husky",
    "commit": "cz",
    "=========== CODE STYLE ============": "",
    "lint": "biome check && biome lint",
    "format": "biome format --write && biome check --write && biome lint --write",
    "typecheck": "tsc --noEmit",
    "=========== NPM PUBLISH ==============": "",
    "release": "npm run build && npm publish --access public",
    "version": "changeset version"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "author": "Bernard Ngandu <bernard@devscast.tech>",
  "license": "MIT",
  "description": "DataZen : TypeScript Database Abstraction Layer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devscast/datazend-ts.git"
  },
  "bugs": {
    "url": "https://github.com/devscast/datazend-ts/issues"
  },
  "homepage": "https://github.com/devscast/datazend-ts#readme"
}
